<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoardGame.Client.Connect4.Mobile.Views.SinglePlayerPage">
  <StackLayout>
    <Label Text="{Binding MainText}" Style="{DynamicResource TitleStyle}" />
    <Button x:Name="bEasy" Text="Easy" TextColor="Gray" Style="{DynamicResource MenuButton}"
            Command="{Binding StartEasyGameCommand}"/>
    <Button x:Name="bMedium" Text="Medium" TextColor="Gray" Style="{DynamicResource MenuButton}"
            Command="{Binding StartMediumGameCommand}"/>
  </StackLayout>  
</ContentPage>