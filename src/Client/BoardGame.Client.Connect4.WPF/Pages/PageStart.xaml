<Page x:Class="BoardGame.Client.Connect4.WPF.Pages.PageStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoardGame.Client.Connect4.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="380"
      Title="PageStart">

    <Grid>
        <StackPanel VerticalAlignment="top">
            <Label Style="{StaticResource TitleStyle}"></Label>
            <Button x:Name="SinglePlayerButton" Style="{StaticResource MenuButton}" Content="Single player" Click="SinglePlayerButton_Click" Margin="5" />
            <Button x:Name="TwoPlayerButton" Style="{StaticResource MenuButton}" Content="Two player" Click="TwoPlayerButton_Click" Margin="5" />
            <Button x:Name="OnlineGameButton" Style="{StaticResource MenuButton}" Content="Online game" Click="OnlineGameButton_Click" Margin="5" />
            <Button x:Name="QuitButton" Style="{StaticResource MenuButton}" Content="Quit" Click="QuitButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Page>
