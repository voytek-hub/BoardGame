<Window x:Class="BoardGame.Client.Connect4.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardGame.Client.Connect4.WPF"
        mc:Ignorable="d"
        Title="Connect Four" Height="400" Width="400" AllowsTransparency="True" WindowStyle="None" Opacity="0.95" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" BorderThickness="3">
    <Window.BorderBrush>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.DesktopColorKey}}"/>
    </Window.BorderBrush>
    <Grid>
        <Frame x:Name="MainFrame"
               Margin="10,10,10,10" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
